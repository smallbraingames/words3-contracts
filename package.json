{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "forge clean && forge build",
    "deploy": "pnpm run initialize && mud deploy && pnpm run copy-deploys",
    "deploy:testnet": "pnpm run initialize && mud deploy --profile=lattice-testnet && pnpm run copy-deploys",
    "dev": "pnpm mud dev-contracts --tsgenOutput ../client-react/src/mud",
    "dev:phaser": "pnpm mud dev-contracts --tsgenOutput ../words3-frontend/src/network/mud",
    "initialize": "pnpm run tablegen && pnpm run worldgen && pnpm run build && pnpm run worldtypes && pnpm run tsgen",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "tablegen": "mud tablegen",
    "test": "mud test",
    "tsgen": "mud tsgen --configPath mud.config.ts --out ../words3-frontend/src/network/mud && cp -r ./types/ethers-contracts/factories ../words3-frontend/src/network/mud && cp ./mud.config.ts ../words3-frontend/src/network/mud && cp ./worlds.json ../words3-frontend/src/network/mud",
    "worldgen": "mud worldgen",
    "worldtypes": "rimraf types && typechain --target=ethers-v5 out/IWorld.sol/IWorld.json",
    "copy-deploys": "cp ./worlds.json ../words3-frontend/src/network/mud"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/cli": "2.0.0-alpha.1.222",
    "@latticexyz/config": "2.0.0-alpha.1.222",
    "@latticexyz/schema-type": "2.0.0-alpha.1.222",
    "@latticexyz/solecs": "2.0.0-alpha.1.222",
    "@latticexyz/std-contracts": "2.0.0-alpha.1.222",
    "@latticexyz/store": "2.0.0-alpha.1.222",
    "@latticexyz/world": "2.0.0-alpha.1.222",
    "@openzeppelin/contracts": "^4.8.3",
    "@solidstate/contracts": "^0.0.52",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.15.11",
    "ds-test": "https://github.com/dapphub/ds-test.git#c9ce3f25bde29fc5eb9901842bf02850dfd2d084",
    "ethers": "^5.7.2",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#b4f121555729b3afb3c5ffccb62ff4b6e2818fd3",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "run-pty": "^4.0.3",
    "solhint": "^3.4.1",
    "solhint-config-mud": "2.0.0-alpha.1.202",
    "solhint-plugin-mud": "2.0.0-alpha.1.202",
    "solmate": "^6.7.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5"
  }
}
