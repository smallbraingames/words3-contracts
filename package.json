{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "----- EXTERNAL -----": "---------------------------",
    "initialize": "yarn tablegen && yarn worldgen && yarn build && yarn worldtypes && yarn tsgen",
    "devnode": "mud devnode",
    "build": "forge clean && forge build",
    "test": "mud test-v2",
    "dev": "yarn deploy",
    "deploy": "yarn initialize && mud deploy-v2",
    "deploy:testnet": "yarn initialize && mud deploy-v2 --profile=lattice-testnet",
    "----- INTERNAL -----": "---------------------------",
    "lint": "yarn prettier && yarn solhint",
    "tablegen": "mud tablegen",
    "worldgen": "mud worldgen",
    "worldtypes": "rimraf types && typechain --target=ethers-v5 out/IWorld.sol/IWorld.json",
    "tsgen": "mud tsgen --configPath mud.config.mts --out ../client/src/mud",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@latticexyz/cli": "2.0.0-alpha.9",
    "@latticexyz/config": "2.0.0-alpha.9",
    "@latticexyz/schema-type": "2.0.0-alpha.9",
    "@latticexyz/solecs": "2.0.0-alpha.9",
    "@latticexyz/std-contracts": "2.0.0-alpha.9",
    "@latticexyz/store": "2.0.0-alpha.9",
    "@latticexyz/world": "2.0.0-alpha.9",
    "@rari-capital/solmate": "https://github.com/rari-capital/solmate.git#851ea3baa4327f453da723df75b1093b58b964dc",
    "@solidstate/contracts": "^0.0.52",
    "@typechain/ethers-v5": "^10.1.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.9",
    "ds-test": "https://github.com/dapphub/ds-test.git#c7a36fb236f298e04edf28e2fee385b80f53945f",
    "ethers": "^5.7.1",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#b4f121555729b3afb3c5ffccb62ff4b6e2818fd3",
    "memmove": "https://github.com/brockelmore/memmove.git#d577ecd1bc43656f4032edf4daa9797f756a8ad2",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "rimraf": "^3.0.2",
    "run-pty": "^4.0.3",
    "solhint": "^3.3.7",
    "ts-node": "^10.7.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/merkle-tree": "^1.0.4",
    "minimist": "^1.2.8",
    "solmate": "^6.7.0"
  }
}
